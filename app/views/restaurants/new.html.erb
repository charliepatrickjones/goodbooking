<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
        <h1 class="text-center mb-4">Add your restaurant</h1>
          <%= simple_form_for @restaurant do |f| %>
          <%= f.input :name, label: 'Restaurant Name', error: 'Restaurant Name is mandatory, please specify one' %>
          <%= f.input :category, label: 'Category', error: 'Category is mandatory, please specify one' %>
          <%= f.input :address, label: 'Address', error: 'Address is mandatory, please specify one' %>
          <%= f.input :capacity, label: 'Capacity', error: 'Address is mandatory, please specify one' %>
          <%= f.input :phone_number, label: 'Phone Number', error: 'Phone Number is mandatory, please specify one' %>
          <%= f.input :description, as: :text%>
          <%= f.input :menu, label: 'Menu' %>
          <%= f.input :price_range, placeholder: 'Â£Â£Â£' %>
          <%= f.input :photos, as: :file , input_html: { multiple: true } %>
          <%= f.button :submit, class: "btn-btn-primary text-white mt-4" %>
        <% end %>
          <p class="mt-2"><%= link_to "cancel", dashboard_path(current_user)%></p>
      </div>
    </div>
</div>
