<%= render 'shared/searchbar' %>
<div class="row mt-4 mb-4 pl-4 pr-4">
  <div class="col-5 p-0 ">
    <div class="cards px-3">
      <% @restaurants.each do |restaurant| %>
        <%= link_to restaurant_path(restaurant) do %>
          <div class="card-product mb-3 p-3">
            <div class="image-wrapper">
              <% if restaurant.photos.attached? %>
                <%= cl_image_tag restaurant.photos.first.key %>
              <% else %>
                <img class="rounded" src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
              <% end %>
            </div>
            <div class="details-wrapper pl-2">
              <div class="card-product-infos">
                <h2><%=restaurant.name%></h2>
                <p><strong><%= restaurant.category %></strong> - <%= restaurant.address %></p>
                <h3>Find table</h3>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col-7 p-0 pb-3">
     <div id="map"
         style="width: 100%; height: 100%;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>

