<div class="tab-panel">
  <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
    <li class="nav-item">
      <a class="nav-link" id="description-tab" data-toggle="tab" href="#description" role="tab" aria-controls="description" aria-selected="false">Description</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="review-tab" data-toggle="tab" href="#review" role="tab" aria-controls="review" aria-selected="false">Reviews</a>
    </li>
    <li class="nav-item">
      <a class="nav-link active" id="photo-tab" data-toggle="tab" href="#photo" role="tab" aria-controls="photo" aria-selected="true">Photos</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="menu-tab" data-toggle="tab" href="#menu" role="tab" aria-controls="menu" aria-selected="false">Menu</a>
    </li>
  </ul>
  <div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade" id="description" role="tabpanel" aria-labelledby="description-tab">
      <%= @restaurant.description %>
    </div>
    <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">

      <div class="row container">
        <div class="col-6">
          <% if !@restaurant.reviews.first.nil? %>
            <%= render "reviews/reviews" %>
          <% else %>
            <p> No review poseted yet</p>
          <% end %>
        </div>
        <div class="col-6">
           <%= render "shared/restaurant_review_form", class: "mt-4"%>
        </div>
      </div>

    </div>
    <div class="tab-pane fade show active" id="photo" role="tabpanel" aria-labelledby="photo-tab">
      <% if @restaurant.photos.present? %>
        <div class="row tab-carousel tabpanel-photos">
          <% @restaurant.photos.each do |photo|%>
            <%= cl_image_tag photo.key, crop: :fill, class:"shadow-sm tabpanel-photo" %>
          <% end %>
        </div>
      <% else %>
        <p> No photo poseted yet</p>
      <% end %>
    </div>
    <div class="tab-pane fade" id="menu" role="tabpanel" aria-labelledby="menu-tab">
      <div class="col-6">
        <% unless @restaurant.menu.nil? %>
          <p><%= @restaurant.menu %></p>
        <% else %>
        <% end %>
      </div>
    </div>
  </div>
</div>
