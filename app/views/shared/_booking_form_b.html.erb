<div class="container">
  <div class="remaining-capacity m-auto text-center">
    <h4> Remaining Seats</h4>
    <div class="row mt-4">
      <% @remaining_slots.each do |key, value| %>
        <div class="col-4 slots-per-meal">
          <h5><%= value %></h5>
          <h5><%= key %></h5>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-3 mb-5">
    <%= simple_form_for [ @restaurant, @booking ] do |f| %>
      <%= f.input :date , as: :date, html5: true, input_html: { value: @booking.date } %>
      <%= f.input :time, as: :select, collection: @remaining_slots.keys %>
      <%= f.input :party, as: :select, collection: (0..@remaining_slots.values.max) %>
      <%= f.submit 'Request' %>
    <% end %>
  </div>
</div>
