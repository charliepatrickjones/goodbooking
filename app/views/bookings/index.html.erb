<div class="container">
  <% if @bookings.empty? %>
    <h2 class="m-5">No booking requested yet</h2>
  <% else %>
    <h2 class="m-5">Requests waiting for accepted</h2>
    <div class="row">
      <%  @bookings.each do |booking| %>
        <% guest = booking.user %>
        <% unless booking.accepted %>
          <div class="card-product m-2 col-4">
            <% if guest.photo.attached? %>
              <%= cl_image_tag guest.photo.key %>
            <% else %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier" %>
            <% end %>
            <div class="card-product-infos">
              <h3><%= guest.name %></h3>
              <h3><%= guest.rating %></h3>
              <h3><%= booking.time%>, <%= booking.date %></h3>
              <button type="button" class="btn btn-primary mb-2 ml-4">Accept</button>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <h2 class="m-5" >Accepted Requests</h2>
    <div class="row">
      <% @bookings.each do |booking| %>
        <% guest = booking.user %>
        <% if booking.accepted %>
          <div class="card-product m-2 col-4">
            <% if guest.photo.attached? %>
              <%= cl_image_tag guest.photo.key %>
            <% else %>
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier" %>
            <% end %>
            <div class="card-product-infos">
              <h3><%= guest.name %></h3>
              <h3><%= guest.rating  %></h3>
              <h3><%= booking.time%>, <%= booking.date %></h3>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
